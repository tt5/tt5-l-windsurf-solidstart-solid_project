{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "target": "ES2022",
    "strict": true,
    "skipLibCheck": true,
    "outDir": "../dist/tests",
    "baseUrl": "..",
    "paths": {
      "~/*": ["./src/*"]
    },
    "types": ["node", "vitest/globals"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "**/*.test.ts"
  ]
}
